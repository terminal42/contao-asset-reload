{
    "name": "terminal42/contao-asset-reload",
    "description": "Hot reload for CSS files from manifest.json",
    "type": "contao-bundle",
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "terminal42 gmbh",
            "homepage": "https://www.terminal42.ch/"
        }
    ],
    "require": {
        "php": "^7.1",
        "contao/core-bundle": "^4.4",
        "symfony/framework-bundle": "^3.3"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0",
        "php-http/guzzle6-adapter": "^1.1",
        "friendsofphp/php-cs-fixer": "^2.6"
    },
    "conflict": {
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "autoload": {
        "psr-4": {
            "Terminal42\\AssetReloadBundle\\": "src"
        }
    },
    "extra": {
        "contao-manager-plugin": "Terminal42\\AssetReloadBundle\\ContaoManager\\Plugin"
    }
}
